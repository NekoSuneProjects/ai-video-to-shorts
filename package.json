{
  "name": "ai-video-to-shorts",
  "private": true,
  "version": "0.1.7",
  "description": "AI Video to Shorts Converter with Whisper supported",
  "author": {
    "name": "NekoSuneVR",
    "email": "nekosunevr@nekosunevr.co.uk"
  },
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "pack": "electron-builder --dir",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.nekosune.shortslab",
    "productName": "Shorts Lab",
    "asar": true,
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "icon": "build/icon.png",
    "win": {
      "icon": "build/icon.png",
      "target": [
        "nsis",
        "msi"
      ]
    },
    "nsis": {
      "runAfterFinish": true
    },
    "linux": {
      "maintainer": "NekoSuneVR <nekosunevr@nekosunevr.co.uk>",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "NekoSuneProjects",
        "repo": "ai-video-to-shorts"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.3.0",
    "extract-zip": "^2.0.1",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "nodejs-whisper": "^0.2.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  }
}
